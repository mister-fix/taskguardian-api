{
  "name": "taskguardian-api",
  "description": "A secure and efficient task management API with JWT authentication, route protection, and comprehensive testing.",
  "private": true,
  "version": "0.3.0",
  "author": "@mister-fix <https://github.com/mister-fix/>",
  "license": "MIT",
  "keywords": [
    "task management",
    "API",
    "Express.js",
    "JWT",
    "authentication",
    "MongoDB",
    "secure API",
    "backend development"
  ],
  "type": "commonjs",
  "main": "index.js",
  "_moduleAliases": {
    "@src": "src",
    "@config": "src/config",
    "@controllers": "src/controllers",
    "@db": "src/db",
    "@middleware": "src/middleware",
    "@models": "src/models",
    "@routes": "src/routes",
    "@services": "src/services",
    "@utils": "src/utils",
    "@validators": "src/validators",
    "@tests": "tests/"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test node --test --test-concurrency=1",
    "test:jest": "jest",
    "deploy": "flyctl deploy",
    "fly:logs": "flyctl logs",
    "plop": "plop",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . !\"plop-templates/*.hbs\" --write",
    "format": "npm run lint:fix && npm run prettier",
    "prepare": "husky || true",
    "cspell": "cspell .",
    "jsdoc": "jsdoc -c jsdoc.config.json -r"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^4.0.0-beta.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-timestamp-colorize": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@cspell/eslint-plugin": "^8.14.2",
    "@flydotio/dockerfile": "^0.5.8",
    "cspell": "^8.14.2",
    "cspell-dictionary": "^8.14.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsdoc": "^50.2.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-sort-imports": "^1.8.6",
    "pretty-quick": "^4.0.0",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0"
  }
}
