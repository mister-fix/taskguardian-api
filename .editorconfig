# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 2
max_line_length = 80

# JavaScript and JSON files
[*.js]
indent_size = 2

# CSS and SCSS files
[*.css]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.yaml]
indent_size = 2

# HTML files
[*.html]
indent_style = indent-size

# Configuration files
# (e.g., .editorconfig itself, .eslintrc, .babelrc)
[{.*,.{json,js}}]
indent_style = space
indent_size = 2
